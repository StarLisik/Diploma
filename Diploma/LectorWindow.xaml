<Window x:Class="Diploma.LectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diploma"
        mc:Ignorable="d"
        Title="LectorWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="LectorGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Width="300" Binding="{Binding Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Почта" Width="200" Binding="{Binding Mail}"></DataGridTextColumn>
                <DataGridTextColumn Header="Предмет" Width="200" Binding="{Binding Subject}"></DataGridTextColumn>
                <DataGridTextColumn Header="Отработанные часы" Width="50" Binding="{Binding Hours}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
