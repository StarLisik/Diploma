<Window x:Class="Diploma.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diploma"
        mc:Ignorable="d"
        Title="Онлайн-школа" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem x:Name="Lectors" Header="Лекторы">
                <Grid>

                </Grid>
            </TabItem>
            <TabItem x:Name="Lessons" Header="Предстоящие занятия">
                <Grid>
                    <DataGrid x:Name="LessonsGrid" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Дата" Width="auto" Binding="{Binding Date}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Предмет" Width="auto" Binding="{Binding Subject}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Лектор" Width="auto" Binding="{Binding Lector}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Группа" Width="auto" Binding="{Binding Group}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem x:Name="Groups" Header="Группы">
                <Grid>
                    
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
